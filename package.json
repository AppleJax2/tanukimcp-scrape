{
  "name": "tanukimcp-scrape",
  "version": "1.0.0",
  "description": "TanukiMCP's flagship web scraping MCP server with intelligent, structured scraping capabilities",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/server.js",
    "start:stdio": "node dist/server.js",
    "start:http": "MCP_TRANSPORT=streamable-http node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "web-scraping",
    "puppeteer",
    "data-extraction",
    "ai-tools",
    "automation"
  ],
  "author": "TanukiMCP",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tanukimcp/tanukimcp-scrape.git"
  },
  "homepage": "https://github.com/tanukimcp/tanukimcp-scrape#readme",
  "bugs": {
    "url": "https://github.com/tanukimcp/tanukimcp-scrape/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "puppeteer": "^22.0.0",
    "csv-writer": "^1.6.0",
    "csv-parser": "^3.0.0",
    "js-yaml": "^4.1.0",
    "fast-csv": "^5.0.1",
    "marked": "^12.0.0",
    "turndown": "^7.1.2",
    "sanitize-filename": "^1.6.3",
    "mime-types": "^2.1.35",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "date-fns": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/mime-types": "^2.1.4",
    "@types/marked": "^6.0.0",
    "@types/turndown": "^5.0.4",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "rimraf": "^5.0.5",
    "nodemon": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "bin": {
    "tanukimcp-scrape": "./dist/server.js"
  },
  "publishConfig": {
    "access": "public"
  }
} 